{
	"compilerOptions": {
		"jsx": "react",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*", "./dist/*", ""],
			"assets/*": ["./src/assets/*"],
			"components/*": ["./src/components/*"],
			"images/*": ["./src/components/images/*"],
			"data/*": ["./src/data/*"],
			"helpers/*": ["./src/helpers/*"],
			"hooks/*": ["./src/hooks/*"],
			"pages/*": ["./src/pages/*"],
			"router/*": ["./src/router/*"],
			"public/*": ["./public/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "build"]
}
